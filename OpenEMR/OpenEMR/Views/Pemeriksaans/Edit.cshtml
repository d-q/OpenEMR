@model OpenEMR.Models.Pemeriksaan

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Pemeriksaan</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="KodeTarif" />
            <div class="form-group">
                <label asp-for="NamaPemeriksaan" class="control-label"></label>
                <input asp-for="NamaPemeriksaan" class="form-control" />
                <span asp-validation-for="NamaPemeriksaan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deskripsi" class="control-label"></label>
                <input asp-for="Deskripsi" class="form-control" />
                <span asp-validation-for="Deskripsi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JenisPemeriksaan" class="control-label"></label>
                <select asp-for="JenisPemeriksaan" class="form-control" asp-items="@(new SelectList(ViewBag.JenisPemeriksaan, "ID", "Name"))">
                    <option value="">-- Select Jenis Pemeriksaan --</option>
                </select>
                <span asp-validation-for="JenisPemeriksaan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KategoriPemeriksaan" class="control-label"></label>
                <input asp-for="KategoriPemeriksaan" class="form-control" />
                <span asp-validation-for="KategoriPemeriksaan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tarif" class="control-label"></label>
                <input asp-for="Tarif" class="form-control" />
                <span asp-validation-for="Tarif" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
